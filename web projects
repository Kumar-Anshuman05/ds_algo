    <script>
        // Sample vegetable data with prices (in ₹ per kg)
        const vegetables = [
            { id: 1, name: "Tomato", price: 30, image: "🍅", organic: true },
            { id: 2, name: "Potato", price: 25, image: "🥔", organic: false },
            { id: 3, name: "Onion", price: 35, image: "🧅", organic: true },
            { id: 4, name: "Carrot", price: 40, image: "🥕", organic: true },
            { id: 5, name: "Cabbage", price: 20, image: "🥬", organic: false },
            { id: 6, name: "Cauliflower", price: 30, image: "🥦", organic: true },
            { id: 7, name: "Brinjal", price: 35, image: "🍆", organic: false },
            { id: 8, name: "Ladyfinger", price: 45, image: "🫛", organic: true },
            { id: 9, name: "Cucumber", price: 25, image: "🥒", organic: false },
            { id: 10, name: "Spinach", price: 30, image: "🌿", organic: true }
        ];

        // Selected items by consumer
        let selectedItems = [];

        // DOM Elements
        const userTypeSelection = document.getElementById('userTypeSelection');
        const farmerForm = document.getElementById('farmerForm');
        const consumerForm = document.getElementById('consumerForm');
        const successPopup = document.getElementById('successPopup');
        const orderConfirmed = document.getElementById('orderConfirmed');
        const vegetableSelection = document.getElementById('vegetableSelection');
        const orderSummary = document.getElementById('orderSummary');
        const selectedItemsDiv = document.getElementById('selectedItems');
        const totalAmountDiv = document.getElementById('totalAmount');
        const paymentSection = document.getElementById('paymentSection');
        const upiDetails = document.getElementById('upiDetails');
        const cardDetails = document.getElementById('cardDetails');
        const consumerSubmitBtn = document.getElementById('consumerSubmitBtn');
        const mobileMenu = document.getElementById('mobileMenu');

        // Payment method radio buttons
        const paymentMethods = document.querySelectorAll('input[name="paymentMethod"]');

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Render vegetable cards
            renderVegetableCards();
            
            // Set up payment method toggle
            paymentMethods.forEach(method => {
                method.addEventListener('change', function() {
                    if (this.id === 'upi') {
                        upiDetails.classList.remove('hidden');
                        cardDetails.classList.add('hidden');
                    } else if (this.id === 'card') {
                        upiDetails.classList.add('hidden');
                        cardDetails.classList.remove('hidden');
                    } else {
                        upiDetails.classList.add('hidden');
                        cardDetails.classList.add('hidden');
                    }
                });
            });
            
            // Scroll to forms smoothly
            const forms = [userTypeSelection, farmerForm, consumerForm];
            forms.forEach(form => {
                if (form) {
                    form.scrollIntoView = function() {
                        this.classList.remove('hidden');
                        window.scrollTo({
                            top: this.offsetTop - 100,
                            behavior: 'smooth'
                        });
                    };
                }
            });
        });

        // Toggle mobile menu
        function toggleMobileMenu() {
            mobileMenu.classList.toggle('hidden');
        }

        // Show user type selection
        function showUserTypeSelection() {
            mobileMenu.classList.add('hidden');
            userTypeSelection.classList.remove('hidden');
            farmerForm.classList.add('hidden');
            consumerForm.classList.add('hidden');
            userTypeSelection.scrollIntoView();
        }

        // Show farmer form
        function showFarmerForm() {
            userTypeSelection.classList.add('hidden');
            farmerForm.classList.remove('hidden');
            consumerForm.classList.add('hidden');
            farmerForm.scrollIntoView();
        }

        // Show consumer form
        function showConsumerForm() {
            userTypeSelection.classList.add('hidden');
            farmerForm.classList.add('hidden');
            consumerForm.classList.remove('hidden');
            consumerForm.scrollIntoView();
        }

        // Back to user type selection
        function backToUserType() {
            showUserTypeSelection();
        }

        // Close success popup
        function closeSuccessPopup() {
            successPopup.classList.add('hidden');
            showUserTypeSelection();
        }

        // Close order confirmed popup
        function closeOrderConfirmed() {
            orderConfirmed.classList.add('hidden');
            showUserTypeSelection();
            // Reset consumer form
            document.getElementById('consumerRegistrationForm').reset();
            selectedItems = [];
            updateOrderSummary();
            
            // Reset quantities
            vegetables.forEach(veg => {
                document.getElementById(`quantity-${veg.id}`).textContent = '0';
            });
        }

        // Render vegetable cards
        function renderVegetableCards() {
            vegetableSelection.innerHTML = '';
            vegetables.forEach(veg => {
                const card = document.createElement('div');
                card.className = 'vegetable-card bg-white p-4 rounded-lg border border-gray-200 cursor-pointer';
                card.innerHTML = `
                    <div class="text-4xl text-center mb-2">${veg.image}</div>
                    <h4 class="text-lg font-medium text-center">${veg.name}</h4>
                    <p class="text-center text-gray-600 mt-1">₹${veg.price}/kg</p>
                    ${veg.organic ? '<p class="text-center text-xs text-green-600 mt-1">Organic</p>' : ''}
                    <div class="mt-3 flex items-center justify-center">
                        <button onclick="decreaseQuantity(${veg.id})" class="quantity-btn px-2 py-1 bg-gray-200 rounded-l-md">-</button>
                        <span id="quantity-${veg.id}" class="px-3 py-1 bg-gray-100">0</span>
                        <button onclick="increaseQuantity(${veg.id})" class="quantity-btn px-2 py-1 bg-gray-200 rounded-r-md">+</button>
                    </div>
                `;
                vegetableSelection.appendChild(card);
            });
        }

        // Increase vegetable quantity
        function increaseQuantity(id) {
            const veg = vegetables.find(v => v.id === id);
            const existingItem = selectedItems.find(item => item.id === id);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                selectedItems.push({
                    id: veg.id,
                    name: veg.name,
                    price: veg.price,
                    quantity: 1,
                    organic: veg.organic
                });
            }
            
            document.getElementById(`quantity-${id}`).textContent = 
                selectedItems.find(item => item.id === id)?.quantity || 0;
            
            updateOrderSummary();
        }

        // Decrease vegetable quantity
        function decreaseQuantity(id) {
            const existingItem = selectedItems.find(item => item.id === id);
            
            if (existingItem) {
                existingItem.quantity -= 1;
                
                if (existingItem.quantity <= 0) {
                    selectedItems = selectedItems.filter(item => item.id !== id);
                }
            }
            
            document.getElementById(`quantity-${id}`).textContent = 
                selectedItems.find(item => item.id === id)?.quantity || 0;
            
            updateOrderSummary();
        }

        // Update order summary
        function updateOrderSummary() {
            if (selectedItems.length === 0) {
                orderSummary.querySelector('p').classList.remove('hidden');
                selectedItemsDiv.classList.add('hidden');
                totalAmountDiv.classList.add('hidden');
                paymentSection.classList.add('hidden');
                consumerSubmitBtn.disabled = true;
            } else {
                orderSummary.querySelector('p').classList.add('hidden');
                selectedItemsDiv.classList.remove('hidden');
                totalAmountDiv.classList.remove('hidden');
                paymentSection.classList.remove('hidden');
                consumerSubmitBtn.disabled = false;
                
                // Update selected items list
                selectedItemsDiv.innerHTML = '';
                let total = 0;
                
                selectedItems.forEach(item => {
                    const itemTotal = item.price * item.quantity;
                    total += itemTotal;
                    
                    const itemDiv = document.createElement('div');
                    itemDiv.className = 'flex justify-between';
                    itemDiv.innerHTML = `
                        <span>${item.name} ${item.organic ? '(Organic)' : ''} (${item.quantity} kg)</span>
                        <span>₹${itemTotal}</span>
                    `;
                    selectedItemsDiv.appendChild(itemDiv);
                });
                
                // Update total
                totalAmountDiv.innerHTML = `Total: ₹${total}`;
            }
        }

