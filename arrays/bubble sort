#include<iostream>
using namespace std;

void swap(int *a,int *b)
{
    int c;
    c=*a;
    *a=*b;
    *b=c;
}
void sort(int arr[],int n)
{
    for(int j=0;j<n-1;j++)
    {
      for(int i=0;i<n-j-1;i++)
      {
        if (arr[i]>arr[i+1])
        {
           swap(&arr[i],&arr[i+1]); 
        }
      }
    }
}
 void printarr(int arr[],int n)
 {
     for(int i=0;i<n;i++)
     {
         cout<<arr[i]<<",";
     }
     cout<<endl;
 }

int main()
{
    int arr[] = {3,9,1,41,10,25,7, -1};
    int size= sizeof(arr)/sizeof(int);
    sort(arr,size);
    cout<<"sorted array is: "<<endl;
    printarr(arr,size);
}
